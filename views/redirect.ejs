<style>
    *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Open Sans', sans-serif;
}
:root{
    --color1: #1A1A2E;
    --color2: #16213E;
    --color3: #0F3460;
    --color4: #246cc4;
    --color5: #E94560;
  }

body{
    width: 100vw;
    background-color: var(--color1);
}
.title{
    font-size: 5em;
    text-align: center;
    color: whitesmoke;
    font-family: 'Open Sans', sans-serif;
    font-style: italic;
    margin: 15px;
}
.moviesWrapper{
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3em;
    padding: 0 2em;
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
}
.movie{
    display: flex;
    padding: 7px 7px;
    border-radius: 1em;
    flex-direction: row;
    align-items: flex-start;
    font-weight: 800;
    color: whitesmoke;
    box-shadow: 0px 0px 28px -1px #151525;
}
.movieTitle{
    color: var(--color5);
    font-weight: 700;
    font-size: 1.4em;
    text-align: center;
    margin-bottom: 10px;
}

.movieTumbnail{
    width: 200px;
    height: auto;
    max-height: 250px;
    border-radius: 1em;
}
.movieDesc{
    margin-left: 10px;
}
.desc{
    margin-bottom: 5px;
    font-size: 1.1em;
}
.inDb{
    opacity: 0.3;
}
.inDbMsg{
    color: whitesmoke;
    position: absolute;
    
}
footer{
    position: sticky;
    bottom: 10px;
}
#addMovieBtn{
    background-color: var(--color5);
    color: whitesmoke;
    text-decoration: none;
    border-radius: 10px;
    border: 1px #bb364c;
    border-style: solid;
    justify-content: center;
    padding: 0 10px;
    height: 30px;
    font-weight: 700;
}
@media (max-width: 800px) {

    .Title{
        font-size: 4em;
    }
    
    .moviesWrapper{
        grid-template-columns: 1fr;
        
    }
    .movie{
        flex-direction: column;
        align-items: center;
    }
    .movieTumbnail{
        margin-bottom: 15px;
    }
}
</style>